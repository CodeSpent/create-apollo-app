{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2016"],
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "pretty": true,
    "removeComments": true,
    "rootDir": "src",
    "outDir": "lib"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
